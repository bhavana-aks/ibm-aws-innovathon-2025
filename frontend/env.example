# AWS Configuration (using APP_ prefix for Amplify compatibility)
# For local development, provide explicit credentials
# For Amplify Hosting, leave these empty to use IAM role
APP_AWS_REGION=us-east-1
APP_AWS_ACCESS_KEY_ID=your-access-key-id
APP_AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Bucket Name (will be created by infrastructure script)
# Format: video-saas-<region>-<account-id>-dev
S3_BUCKET_NAME=video-saas-us-east-1-123456789-dev

# DynamoDB Table Name
DYNAMODB_TABLE_NAME=VideoSaaS

# ECS Configuration (Phase 5 - Video Recording)
ECS_CLUSTER_NAME=video-saas-cluster
ECS_TASK_FAMILY=video-saas-recorder
ECS_SUBNETS=subnet-xxx,subnet-yyy
ECS_SECURITY_GROUPS=sg-xxx

# Cognito Configuration (Phase 2)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=your-user-pool-id
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-client-id
NEXT_PUBLIC_AWS_REGION=us-east-1

# API Gateway Configuration (Phase 2)
NEXT_PUBLIC_API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod

# Base URL for internal API calls (set to your Amplify domain in production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
