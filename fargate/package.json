{
  "name": "video-recorder-fargate",
  "version": "1.0.0",
  "description": "Fargate container for video recording with Playwright and FFmpeg",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "docker:build": "docker build -t video-recorder .",
    "docker:run": "docker run -e PROJECT_ID=test -e TENANT_ID=demo -e S3_BUCKET=test-bucket video-recorder"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/client-sfn": "^3.400.0",
    "@playwright/test": "1.49.0",
    "express": "^4.18.2",
    "playwright": "1.49.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
